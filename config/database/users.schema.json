{

  "$jsonSchema": {
    "bsonType": "object",
    "required": [
      "username",
      "email",
      "password",
      "role",
      "phone"
    ],
    "properties": {
      "username": {
        "bsonType": "string",
        "description": "User full name"
      },
      "email": {
        "bsonType": "string",
        "pattern": "^[^\\s@]+@[^\\s@]+\\.[^\\s@]+$",
        "description": "User email"
      },
      "password": {
        "bsonType": "string",
        "minLength": 6,
        "description": "User password"
      },
      "role": {
        "bsonType": "string",
        "enum": ["buyer", "seller", "admin"],
        "description": "User role"
      },
      "phone": {
        "bsonType": "string",
        "pattern": "^[0-9]{10}$",
        "description": "Phone number"
      }
    }
  }
}